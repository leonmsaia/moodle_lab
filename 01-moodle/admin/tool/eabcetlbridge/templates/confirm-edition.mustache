{{!
    @template tool_eabcetlbridge/confirm-edition
}}

<div class="modal" id="confirm_update_element" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content box py-3">
            <div class="modal-header box py-3 px-3">
                <h5 class="modal-title">{{confirmtitle}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body box py-3"">
                <p>{{message}}</p>
            </div>
            <div class="modal-footer box py-3">
                {{{submitbutton}}}
                <a type="button" class="btn btn-dark" data-dismiss="modal">{{cancel}}</a>
            </div>
        </div>
    </div>
</div>