<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/eabcprogramas/db" VERSION="20200708" COMMENT="XMLDB file for Moodle local/eabcprogramas"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_eabcprogramas" COMMENT="Default comment for local_eabcprogramas, please edit me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="description" TYPE="char" LENGTH="500" NOTNULL="false" SEQUENCE="false" COMMENT="Nombre del programa"/>
        <FIELD NAME="version" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Versión del grupo de programas"/>
        <FIELD NAME="fromdate" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Vigente desde"/>
        <FIELD NAME="todate" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Vigente hasta"/>
        <FIELD NAME="grupo" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Grupo al que pertenece el programa"/>
        <FIELD NAME="caducidad" TYPE="char" LENGTH="2" NOTNULL="false" DEFAULT="36" SEQUENCE="false" COMMENT="Vigencia del programa (36 meses por defecto)"/>
        <FIELD NAME="cursos" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false" COMMENT="Lista de ID de los Cursos que pertenecen al programa"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Fecha de creación"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Fecha de modificación"/>
        <FIELD NAME="status" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="En preparación, Activo, inactivo"/>
        <FIELD NAME="codigo" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="horas" TYPE="char" LENGTH="2" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="responsable" TYPE="char" LENGTH="200" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="objetivos" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_eabcprogramas_usuarios" COMMENT="Alacena registros de usuarios asociados a progrmas educativos">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="programid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="status" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="vigente (S/N)"/>
        <FIELD NAME="cursos" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Lista de nombres de cursos aprobados"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="codigo_programa" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="description" TYPE="char" LENGTH="500" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="usuario" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="rut_usuario" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="empresa" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="rut_empresa" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="end_firstcourse" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="fecha_otorgamiento" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="fecha_vencimiento" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Fecha de vencimiento del programa - versión (calculada según duración)"/>
        <FIELD NAME="diplomaid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="certificadoid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="codigo" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="codigo_diploma" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="codigo_certificado" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="horas" TYPE="char" LENGTH="3" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="caducidad" TYPE="char" LENGTH="3" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="adherente" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_diplomas" COMMENT="Alamcena los modelos de diploma">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="img" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="fromdate" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="todate" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="status" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="urltemp" TYPE="char" LENGTH="500" NOTNULL="false" SEQUENCE="false" COMMENT="Ruta del archivo guardada en la moodle_data temp/diplomas/{img}"/>
        <FIELD NAME="urlfile" TYPE="char" LENGTH="500" NOTNULL="false" SEQUENCE="false" COMMENT="Ruta del archivo guardado en la tabla files"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_certificados" COMMENT="Alamcena los modelos de certificados">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="img" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="fromdate" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="todate" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="status" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="urltemp" TYPE="char" LENGTH="500" NOTNULL="false" SEQUENCE="false" COMMENT="Ruta del archivo guardada en la moodle_data temp/certificados/{img}"/>
        <FIELD NAME="urlfile" TYPE="char" LENGTH="500" NOTNULL="false" SEQUENCE="false" COMMENT="Ruta del archivo guardado en la tabla files"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>